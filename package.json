{
  "name": "oai-chat",
  "publisher": "siddhivinayak-sk",
  "displayName": "OAI Chat",
  "description": "A VS Code extension to chat with Azure OpenAI and Azure AI Search, with file attachment and formatted response panel.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:azureAIChat.openPanel"
  ],
  "main": "./dist/extension.js",
  "contributes": {
  "commands": [],
  "menus": {},
    "viewsContainers": {
      "activitybar": [
        {
          "id": "azureAIChatContainer",
          "title": "OAI Chat",
          "icon": "images/oai.png"
        }
      ]
    },
    "views": {
      "azureAIChatContainer": [
        {
          "id": "azureAIChatView",
          "name": "Chat",
          "icon": "images/oai.png",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "OAI Chat Configuration",
      "properties": {
        "azureAIChat.systemPrompt": {
          "type": "string",
          "default": "",
          "description": "System prompt to set the behavior of the AI (optional)"
        },
        "azureAIChat.openAIApiEndpoint": {
          "type": "string",
          "default": "",
          "description": "Azure OpenAI API endpoint URL (e.g. https://YOUR-RESOURCE.openai.azure.com)"
        },
        "azureAIChat.openAIApiKey": {
          "type": "string",
          "default": "",
          "description": "Azure OpenAI API key"
        },
        "azureAIChat.openAIApiVersion": {
          "type": "string",
          "default": "2024-02-15-preview",
          "description": "Azure OpenAI API version (e.g. 2024-02-15-preview)"
        },
        "azureAIChat.openAIDeployment": {
          "type": "string",
          "default": "",
          "description": "Azure OpenAI deployment name (required)"
        },
        "azureAIChat.openAIModel": {
          "type": "string",
          "default": "gpt-35-turbo",
          "description": "Azure OpenAI model name (e.g. gpt-35-turbo, gpt-4)"
        },
        "azureAIChat.searchApiEndpoint": {
          "type": "string",
          "default": "",
          "description": "Azure AI Search endpoint URL"
        },
        "azureAIChat.searchApiKey": {
          "type": "string",
          "default": "",
          "description": "Azure AI Search API key"
        },
        "azureAIChat.searchIndex": {
          "type": "string",
          "default": "",
          "description": "Azure AI Search index name"
        },
        "azureAIChat.botFrameworkEndpoint": {
          "type": "string",
          "default": "",
          "description": "Azure Bot Framework endpoint URL (optional, for Adaptive Cards and rich formatting)"
        },
        "azureAIChat.topSearchResult": {
          "type": "integer",
          "default": 5,
          "description": "Number of top search results to return from Azure AI Search (Optional)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "ts-loader": "^9.5.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
